<!-- Generated by AWAG ver.${AWAGversion} at ${.now?iso_local} -->
<form name="form" action="#">
  <div class="mdl-card  mdl-shadow--2dp myfitcard">
    <div class="mdl-card__title mdl-card--border card-title">
      <h2 class="mdl-card__title-text  card-title-text"><i class="material-icons">web_asset</i> ${resource.resourceDisplayName} 新規/更新</h2>
    </div>

    <div class="mdl-card__supporting-text mdl-card--border">
      <div class="mdl-grid">
        <!-- errors-->
        <div class="error mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--top mdl-cell--12-col" ng-show="m.error.code">
          <!-- [{{m.error.code}}] {{m.error.message}} -->
          <div ng-repeat="detail in m.error.details">
            <i class="material-icons">warning</i> [{{detail.code}}] {{detail.message}} <br>
          </div>
        </div>
<#list resource.columnDefinitions as column>
	<#if column.htmlType == "TEXT">
        <!-- ${column.displayName} Textfield with Floating Label -->
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--top mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
		<#if column.formatValidationRule??>
          <input class="mdl-textfield__input" id="${column.fieldName}" type="text" pattern="${column.formatValidationRule.regex}" ng-model="m.model.${column.fieldName}" <#if !column.allowedNull>required</#if>/>
		<#else>
          <input class="mdl-textfield__input" id="${column.fieldName}" type="text" ng-model="m.model.${column.fieldName}" <#if !column.allowedNull>required</#if>/>
		</#if>
          <label class="mdl-textfield__label" for="${column.fieldName}">${column.displayName} <#if !column.allowedNull>*<#else>...</#if></label>
		<#if column.formatValidationRule??>
          <span class="mdl-textfield__error">${column.formatValidationRule.message}</span>
		</#if>
        </div>
	</#if>
	<#if column.htmlType == "SPACER">
        <!-- space-->
        <div class="mdl-textfield mdl-cell mdl-cell--top mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
	</#if>
	<#if column.htmlType == "TEXTAREA">
        <!-- ${column.displayName} Floating Multiline Textarea -->
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--top mdl-cell--12-col">
          <textarea class="mdl-textfield__input" id="${column.fieldName}" rows="3" type="text" ng-model="m.model.${column.fieldName}" <#if !column.allowedNull>required</#if>></textarea>
          <label class="mdl-textfield__label" for="${column.fieldName}">${column.displayName} <#if !column.allowedNull>*<#else>...</#if></label>
        </div>
	</#if>
	<#if column.htmlType == "SELECT">
        <!-- ${column.displayName} Pulldown-->
        <div class="mdl-textfield mdl-cell mdl-cell--top mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
          <span class="input-floating-label">${column.displayName} <#if !column.allowedNull>*<#else>...</#if></span>
          <select class="mdl-textfield__input height28" id="${column.fieldName}" ng-model="m.model.${column.fieldName}" <#if !column.allowedNull>required</#if>>
            <option ng-repeat="opt in m.${column.codeListId}" value="{{opt.value}}">{{opt.name}}</option>
          </select>
        </div>
	</#if>
	<#if column.htmlType == "RADIO">
        <!-- ${column.displayName} Radio-->
        <div class="mdl-textfield mdl-cell mdl-cell--top mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
          <span class="input-floating-label">${column.displayName} <#if !column.allowedNull>*<#else>...</#if></span>
          <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="${column.fieldName}-{{opt.value}}" ng-repeat="opt in m.${column.codeListId}">
            <input class="mdl-radio__button" id="${column.fieldName}-{{opt.value}}" name="${column.fieldName}" type="radio" value="{{opt.value}}" ng-model="m.model.${column.fieldName}" <#if !column.allowedNull>required</#if>/>
            <span class="mdl-radio__label">{{opt.name}}&nbsp;&nbsp;</span>
          </label>
        </div>
	</#if>
	<#if column.htmlType == "CHECKBOX">
        <!-- ${column.displayName} Checkbox-->
        <div class="mdl-textfield mdl-cell mdl-cell--top mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
          <span class="input-floating-label">${column.displayName} <#if !column.allowedNull>*<#else>...</#if></span>
          <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="${column.fieldName}-{{${column.codeListId}[1].value}}"">
            <input type="checkbox" id="${column.fieldName}-{{${column.codeListId}[1].value}}" class="mdl-checkbox__input" ng-model="m.model.${column.fieldName}" ng-true-value="'{{${column.codeListId}[1].value}}'" ng-false-value="'{{${column.codeListId}[0].value}}'" <#if !column.allowedNull>required</#if>/>
            <span class="mdl-checkbox__label">{{m.${column.codeListId}[1].name}}</span>
          </label>
        </div>
	</#if>
	<#if column.htmlType == "OUTPUT">
      <!-- ${column.displayName} output -->
      <div class="mdl-textfield mdl-textfield--floating-label mdl-cell mdl-cell--top mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone is-upgraded" data-upgraded=",MaterialTextfield">
        <span class="input-floating-label">${column.displayName}...</span>
        <span id="${column.fieldName}" class="mdl-textfield__output">{{m.search.date}}</span>
      </div>
	</#if>
</#list>
      </div>
    </div>

    <div class="mdl-card__actions mdl-card--border">
      <!-- Raised button with ripple -->
      <button type="button" id="btn_goconfirm" class="white-space mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" ng-click="m.goConfirm()" ng-disabled="form.$invalid">
        確認へ
      </button>
      <!-- Raised button with ripple -->
      <button type="button" id="btn_gosearch" class="white-space mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" onclick="location.href='#!/${resource.resourceName?lower_case}'">
        検索へ戻る
      </button>
    </div>
  </div>

  <div class="mdl-card  mdl-shadow--2dp myfitcard">
    <div class="mdl-card__title  card-title">
      <h2 class="mdl-card__title-text mdl-card--border card-title-text"><i class="material-icons">web_asset</i> 明細</h2>
    </div>

    <div class="mdl-card__supporting-text mdl-card--border">
      <div class="mdl-grid">
        <div class="x-table mdl-cell mdl-cell--12-col">
          <span ng-repeat="page in m.itemPager.pagerList">
            <a class="mdl-navigation__link" ng-click="m.paginate(m.itemPager, page )" ng-if="m.itemPager.pagenum!=page" href="javascript:void(0)"> [{{page+1}}] </a>
            <span class="mdl-navigation__link" ng-click="m.paginate(m.itemPager, page )" ng-if="m.itemPager.pagenum==page"> {{page+1}} </span>
          </span>Page
          <table class="mdl-data-table mdl-shadow--2dp">
            <thead>
              <tr>
                <th>#</th>
                <th>-</th>
<#assign embeddedResource = embeddedResourceDefinitions[0]>
<#list embeddedResource.columnDefinitions as column>
	<#if column.searchParam>
		<#if column.htmlType == "NONE">
		<#elseif column.dataType == "INTEGER" || column.dataType == "DECIMAL" || column.dataType == "NUMBER">
                <th class=""                                  ng-class="{'mdl-data-table__header--sorted-descending': m.i.${column.fieldName}Desc===true, 'mdl-data-table__header--sorted-ascending': m.i.${column.fieldName}Desc===false}" ng-click="m.i.resetDesc('${column.fieldName}');m.i.${column.fieldName}Desc=!m.i.${column.fieldName}Desc;m.isort('${column.fieldName}', m.i.${column.fieldName}Desc)">${column.displayName}</th>
		<#else>
                <th class="mdl-data-table__cell--non-numeric" ng-class="{'mdl-data-table__header--sorted-descending': m.i.${column.fieldName}Desc===true, 'mdl-data-table__header--sorted-ascending': m.i.${column.fieldName}Desc===false}" ng-click="m.i.resetDesc('${column.fieldName}');m.i.${column.fieldName}Desc=!m.i.${column.fieldName}Desc;m.isort('${column.fieldName}', m.i.${column.fieldName}Desc)">${column.displayName}</th>
		</#if>
	</#if>
</#list>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="item in m.itemList | limitTo: m.itemPager.len :m.itemPager.start">
                <td>
                  <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="itemKey{{$index}}">
                    <input class="mdl-radio__button" id="itemKey{{$index}}" name="itemKey" type="radio" ng-value="<#list embeddedResource.pkFields as pkField>item.${pkField.fieldName}<#sep>+m.delimiter+</#list>" ng-model="m.itemKey" ng-click="m.itemSelect()" />
                  </label>
                </td><span ng-if="checked" class="animate-if">
                <td class="">
                  <span ng-if="item._action=='a'">Add</span>
                  <span ng-if="item._action=='u'">Update</span>
                  <span ng-if="item._action=='d'">Delete</span>
                </td>
<#list embeddedResource.columnDefinitions as column>
	<#if column.searchParam>
		<#if column.htmlType == "NONE">
		<#elseif column.dataType == "INTEGER" || column.dataType == "DECIMAL" || column.dataType == "NUMBER">
                <td class="">{{item.${column.fieldName}}}</td>
		<#else>
			<#if column.htmlType == "SELECT" || column.htmlType == "RADIO" || column.htmlType == "CHECKBOX">
                <td class="mdl-data-table__cell--non-numeric">{{m.getNameFromValue(m.${column.codeListId}, item.${column.fieldName})}}</td>
			<#else>
                <td class="mdl-data-table__cell--non-numeric">{{item.${column.fieldName}}}</td>
			</#if>
		</#if>
	</#if>
</#list>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="mdl-card__actions mdl-card--border">
      <!-- Raised button with ripple -->
      <button type="button" id="btn_gonewitem" class="white-space mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" ng-click="m.goNewItem()">
        明細追加
      </button>
      <!-- Raised button with ripple -->
      <button type="button" id="btn_goitemupdate" class="white-space mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" ng-click="m.goItemUpdate()" ng-disabled="m.updateItemDisabled">
        明細更新
      </button>
      <!-- Raised button with ripple -->
      <button type="button" id="btn_doitemdelete" class="white-space mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" ng-click="m.doItemDelete()"  ng-disabled="m.deleteItemDisabled">
        明細削除
      </button>
    </div>
  </div>
</form>
